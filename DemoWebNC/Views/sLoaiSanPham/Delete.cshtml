@model DemoWebNC.Models.LoaiSanPham

@{
    ViewBag.Title = "Xóa loại sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="color: #dc3545;">Bạn có muốn xóa loại sản phẩm này không?</h3>
<div class="container">
    <dl class="row">
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.TenLoaiSP)
        </dt>

        <dd class="col-8">
            @Html.DisplayFor(model => model.TenLoaiSP)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group row", style="margin-bottom: 500px">
            <div class="col-12">
                <button type="submit" class="btn btn-danger">Xóa</button> |
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>

